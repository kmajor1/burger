<div class="container">
  <div class="row">
    <div class="col">
      <h1>Burgers</h1>

    </div>
  </div>
  <div class="row">
    <div class="col">

      <h2 class="mb-5">These burgers are waiting to be eaten!</h2>


      <ul class="devoured">
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col">
      <h2 class="mb-5">Burgers that have been eaten!</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block}}
        {{/if}}
        {{/each}}
      </ul>

      <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="burger_name" name="burger_name">
        </div>



        <button class="btn btn-primary" type="submit">Add Burger</button>
      </form>
    </div>

  </div>

</div>